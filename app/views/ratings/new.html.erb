<h1> New Review </h1>

<%= form_for (@rating) do |f| %>
    <%= f.hidden_field :recipe_id %>
    <%= f.label :stars, "1-5 stars" %>
    <%= f.number_field :stars, min: 1, max:5 %><br>
    <%= f.label :description, "Write your review" %>
    <%= f.text_field :description %>
    <%= f.submit "Submit Rating" %>

<% end %>