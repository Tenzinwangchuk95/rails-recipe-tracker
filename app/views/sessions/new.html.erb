<%= form_tag('/sessions', method: :post) do %>

    <div class="form-group">
      <%= label_tag(:user_name, "Your user name:") %>
      <%= text_field_tag(:user_name, nil, class: "form-control") %>
    </div>
  
    <div class="form-group">
      <%= label_tag(:password, "Your password:") %>
      <%= password_field_tag(:password, nil, class: "form-control") %>
    </div>
  
    <div class="actions">
      <%= submit_tag("Sign In") %>
    </div>
  
<% end %>


<%= link_to('Create an Account!', '/users/new') %><br>
<%= link_to('Log in with Facebook!', '/auth/facebook') %>
