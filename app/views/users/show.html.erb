<% if @user.user_name %>
  <h1>Username:<%= @user.user_name %></h1>
  <%= link_to 'Your recipes', recipe_path(@user) %><br>
  <%= link_to('All recipes', '/recipes') %><br>
  <%= link_to('New recipe', '/recipes/new') %><br>
  <%= link_to('Log out', '/logout') %>
<% elsif session[:user_id] == @user.id %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>
  <h2>Facebook UID: <%= @user.uid %></h2>
  <img src="<%= @user.image %>"><br>
  <%= link_to 'Your recipes', recipe_path(@user) %><br>
  <%= link_to('All recipes', '/recipes') %><br>
  <%= link_to('New recipe', '/recipes/new') %><br>
  <%= link_to('Log out', '/logout') %>
<% else %>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %><br>
  <%= link_to('Log in with Username!', '/sessions/new') %>
<% end %>